<p id="notice"><%= notice %></p>

<h1>Listing Priorities</h1>

<table>
  <thead>
    <tr>
      <th>Screen name</th>
      <th>Ordering</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @priorities.each do |priority| %>
      <tr>
        <td><%= priority.screen_name %></td>
        <td><%= priority.ordering %></td>
        <td><%= link_to 'Show', priority %></td>
        <td><%= link_to 'Edit', edit_priority_path(priority) %></td>
        <td><%= link_to 'Destroy', priority, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

