<p id="notice"><%= notice %></p>

<h1>Listing Publish Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Status name</th>
      <th>Ordering</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publish_statuses.each do |publish_status| %>
      <tr>
        <td><%= publish_status.status_name %></td>
        <td><%= publish_status.ordering %></td>
        <td><%= link_to 'Show', publish_status %></td>
        <td><%= link_to 'Edit', edit_publish_status_path(publish_status) %></td>
        <td><%= link_to 'Destroy', publish_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

